import csv

def load_csv(filename):
    """Load CSV file into a list of dictionaries"""
    with open(filename, "r", newline="") as f:
        reader = csv.DictReader(f)
        return list(reader)

def convert_to_float(value):
    """Try converting a value to float"""
    try:
        return float(value)
    except ValueError:
        return None

def summarize(data, column, operation):
    """Perform max, min, or average on a column"""
    values = [
        convert_to_float(row[column])
        for row in data
        if convert_to_float(row[column]) is not None
    ]

    if not values:
        return f"No numeric data found in column '{column}'"

    if operation == "max":
        return max(values)
    elif operation == "min":
        return min(values)
    elif operation == "average":
        return sum(values) / len(values)
    else:
        return "Invalid operation"

